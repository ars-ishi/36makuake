%head
  %link{href: "//css.36project.com/stylesheets/users/popup.css", rel: "stylesheet"}/
  %link{href: "//css.36project.com/stylesheets/users/sidenavi.css", rel: "stylesheet"}/
#wrapperMypage
  / contentWrapper
  #contentWrapper.clearfix
    = render '/shared/sidenavi'
    / rightContentMain
    #rightContentMain
      %section#socialDetails
        = link_to 'お届け住所一覧はこちら', user_send_addresses_path(current_user), style: 'float: right', class: 'iconArrow24_02'
        %h2.ttlReturn お届け先住所の登録
        = form_for [@user, @send_address] do |f|
          %form
            .returnIn
              %dl
                %dt
                  名前(全角)
                  %span.requiredTxt 必須
                %dd
                  姓
                  = f.text_field :last_name, placeholder: '例）山田', size: '9', class: 'infoInput'
                  名
                  = f.text_field :first_name, placeholder: '例）太郎', size: '9', class: 'infoInput'
              %dl
                %dt
                  カナ(全角)
                  %span.requiredTxt 必須
                %dd
                  セイ
                  = f.text_field :last_name_ruby, placeholder: '例）ヤマダ', size: '9', class: 'infoInput'
                  メイ
                  = f.text_field :first_name_ruby, placeholder: '例）タロウ', size: '9', class: 'infoInput'
              %dl
                %dt
                  郵便番号
                  %span.requiredTxt 必須
                %dd
                  = f.text_field :postal_code, maxlength: '7', placeholder: '例）1234567', size: '12', style: 'width: 100px', class: 'infoInput02'
              %dl
                %dt
                  都道府県
                  %span.requiredTxt 必須
                %dd
                  = f.select :prefecture, [['北海道','01'], ['青森県','02'], ['岩手県','03'], ['宮城県','04'], ['秋田県','05'], ['山形県','06'], ['福島県','07'], ['茨城県','08'], ['栃木県','09'], ['群馬県','10'], ['埼玉県','11'], ['千葉県','12'], ['東京都','13'], ['神奈川県','14'], ['新潟県','15'], ['富山県','16'], ['石川県','17'], ['福井県','18'], ['山梨県','19'], ['長野県','20'], ['岐阜県','21'], ['静岡県','22'], ['愛知県','23'], ['三重県','24'], ['滋賀県','25'], ['京都府','26'], ['大阪府','27'], ['兵庫県','28'], ['奈良県','29'], ['和歌山県','30'], ['鳥取県','31'], ['島根県','32'], ['岡山県','33'], ['広島県','34'], ['山口県','35'], ['徳島県','36'], ['香川県','37'], ['愛媛県','38'], ['高知県','39'], ['福岡県','40'], ['佐賀県','41'], ['長崎県','42'], ['熊本県','43'], ['大分県','44'], ['宮崎県','45'], ['鹿児島県','46'], ['沖縄県','47']], class: 'selectInput'

              %dl
                %dt
                  市区町村
                  %span.requiredTxt 必須
                %dd
                  = f.text_field :municipality, placeholder: '例）大阪市北区中崎西', size: "21", class: 'address1 infoInput03'
              %dl
                %dt
                  番地
                  %span.requiredTxt 必須
                %dd
                  = f.text_field :house_number, placeholder: '例）2-4-43', size: '21', class: 'address2 infoInput03'
              %dl
                %dt 建物名(任意)
                %dd
                  = f.text_field :building, placeholder: '例）山本ビル梅田 ５F', :size => "30", class: 'address3 infoInput03'
              %dl
                %dt
                  電話番号
                  %span.requiredTxt 必須
                %dd
                  = f.text_field :phone_number, placeholder: '例）09012345678', :size => '21', class: 'phone1 infoInput03'
              %dl
                %dt
                  お届け先
                  %span.requiredTxt 必須
                %dd
                  %label
                    = f.radio_button :main, 1, checked: 'checked', id: 'project_update_1'
                    お届け先に設定する
                  %label
                    = f.radio_button :main, 0, id: 'project_update_2'
                    お届け先に設定しない
            = f.submit '登録', style: 'background-color: #f7c600',class: 'updateBtn02'
        / ./section01
      / ./rightContentMain
    / ./contentWrapper
