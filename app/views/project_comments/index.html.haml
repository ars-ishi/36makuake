          %i> &gt;
           
        %li{:itemscope => "", :itemtype => "http://data-vocabulary.org/Breadcrumb"}
          %a{:href => "/discover/categories/restaurant/", :itemprop => "url"}>
            %span{:itemprop => "title"} レストラン・バー
           
          %i> &gt;
           
        %li{:itemscope => "", :itemtype => "http://data-vocabulary.org/Breadcrumb"}
          %a{:href => "/project/your-restaurant/", :itemprop => "url"}>
