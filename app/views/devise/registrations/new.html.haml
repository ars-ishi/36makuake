%h2 メールアドレスで新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email do
      メールアドレス
    %br/
    = f.email_field :email, autofocus: true, autocomplete: 'email', required: 'required'
  .field
    = f.label :email_confirm do
      確認
    %br/
    = f.email_field :email, autofocus: true, autocomplete: 'email_confirm', required: 'required', id: 'user_email_confirm', onInput: "mailValidates(this, 'user_email')"
  .field
    = f.label :name do
      ユーザー名
      %em ※全角・半角英数字3-20文字
    %br/
    = f.text_field :name, autofocus: true, autocomplete: 'name', required: 'required'
  .field
    = f.label :password do
      パスワード
    - if @minimum_password_length
      %em ※半角英数字#{@minimum_password_length}文字以上
    %br/
    = f.password_field :password, autocomplete: 'password', required: 'required', minlength: 6
  .field
    = f.label :password_confirmation do
      確認
    %br/
    = f.password_field :password_confirmation, autocomplete: 'password_confirmation', required: 'required', minlength: 6, onInput: "passValidates(this, 'user_password')"
  .field
    %label{for: 'agree' }
      %input#agree{ autocomplete: 'off', name: 'agreement', required: 'required', type: 'checkbox', value: '' }
      -# 利用規約は現状本物のサイトを開いていますが、余裕があればページ作ってwindow.openのパスを変更してください。
      = link_to '利用規約', 'javascript:agreementWindow();'
      %span に同意する
  .actions
    = f.submit "新規登録"
= render "devise/shared/links"
