#notice.notice{ style: "display:none;"}
  =link_to new_user_session_path ,class:"message",style:"text-align:center;display:inherit;color:#868686" do
    %p ログインか新規登録が必要です
#sign_in.sign_in{ style: "display:none;"}
  %section.login__outer
    %p.modal03__title ログイン
    = link_to '#sign_up', class: 'btnLogin03 sign_up close_sign_in' do
      新規登録はこちら
      %svg.btnLogin03-icon
        %use{"xlink:href" => "#icon-arrow-right", "xmlns:xlink" => "http://www.w3.org/1999/xlink"}
    .modal03__block
      -# SNSログイン
      .modal03__leftblock.short
        %p.modal03__block__title SNSでログイン
        -# = link_to user_facebook_omniauth_authorize_path, class: 'registFacebook' do
        -#   %svg.registsns__icon
        -#     %use{"xlink:href" => "#icon-facebook", "xmlns:xlink" => "http://www.w3.org/1999/xlink"}
        -#   Facebook
        = link_to user_twitter_omniauth_authorize_path, class: 'registTwitter' do
          %svg.registsns__icon
            %use{"xlink:href" => "#icon-twitter-02", "xmlns:xlink" => "http://www.w3.org/1999/xlink"}
          Twitter
      -# メールアドレスログイン
      .modal03__rightblock.short
        %p.modal03__block__title MakuakuIDでログイン
        = form_for(:user, :url => session_path(:user)) do |f|
          .kurumi
            = f.label :email, class: 'note' do
              メールアドレス
            = f.email_field :email, id: 'user_email_signin_modal', required: 'required', class: 'loginForm', autocomplete: 'email'
          .kurumi
            = f.label :password, class: 'note' do
              パスワード
              %p.notes ※半角英数字6文字以上
            = f.password_field :password, id: 'user_password_signin_modal', autocomplete: 'current-password', required: 'required', minlength: 6, class: 'loginForm'
          .modal03__btn__block
            = f.submit 'ログイン', class: 'btnRegit03 btncol_03'
