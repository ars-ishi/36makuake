%div{style: 'background: #eee; width:100%;' }
  %p ヘッダーに入れるユーザー関係のリンク先
  -# レイアウトはあとで調整してください
  %div{style: 'background: #ddd; width:100%; height:100px;' }
    %div{style: 'width:30%; float:left;' }
      = link_to 'root', root_path
    - unless user_signed_in?
      %div{style: 'width:30%; float:left;' }
        %div モーダル用で開くリンク
        %div
          = link_to 'ログイン', '#sign_in', class: 'sign_in'
        %div
          = link_to '新規登録', '#sign_up', class: 'sign_up'

    - if user_signed_in?
      %div{style: 'width:30%; float:left;' }
        = link_to 'マイページ', user_path(current_user.id)
      %div
        = link_to 'ログアウト', destroy_user_session_path, method: :delete
    - else
      %div{style: 'width:30%; float:left;' }
        %div 別ページで開くリンク
        %div
          = link_to '新規登録', new_user_registration_path
        %div
          = link_to 'ログイン', new_user_session_path

  = render partial: 'layouts/sign_in'
  = render partial: 'layouts/sign_up'
