#sign_up.sign_up{ style: "display:none;"}
  %section.login__outer
    %p.modal03__title 新規登録
    = link_to new_user_session_path, class: 'btnLogin03' do
      ログインはこちら
      %svg.btnLogin03-icon
        %use{"xlink:href" => "#icon-arrow-right", "xmlns:xlink" => "http://www.w3.org/1999/xlink"}
    %p.modal03__title-recomend ＼約1分で登録でき、Makuakeを楽しめます!／
    .modal03__block
      -# SNSログイン
      .modal03__leftblock.short
        %p.modal03__block__title SNSでログイン
        = link_to user_facebook_omniauth_authorize_path, class: 'registFacebook' do
          %svg.registsns__icon
            %use{"xlink:href" => "#icon-facebook", "xmlns:xlink" => "http://www.w3.org/1999/xlink"}
          Facebook
        = link_to user_twitter_omniauth_authorize_path, class: 'registTwitter' do
          %svg.registsns__icon
            %use{"xlink:href" => "#icon-twitter-02", "xmlns:xlink" => "http://www.w3.org/1999/xlink"}
          Twitter
      -# メールアドレス登録
      .modal03__rightblock.short
        %p.modal03__block__title メールアドレスで新規登録
        = form_for(:user, :url => registration_path(:user)) do |f|
          .kurumi
            = f.label :email, class: 'note' do
              メールアドレス
            = f.email_field :email, autofocus: true, autocomplete: 'email', required: 'required', id: 'user_email_signup_modal', class: 'loginForm'
          .kurumi
            = f.label :email_confirm, class: 'note note--textright' do
              確認
            = f.email_field :email, autofocus: true, autocomplete: 'email_confirm', required: 'required', class: 'loginForm', id: 'user_email_confirm_signup_modal', onInput: "mailValidates(this, 'user_email_signup_modal')"
          .kurumi
            = f.label :name, class: 'note' do
              ユーザー名
              %p.notes ※20文字以内
            = f.text_field :name, autofocus: true, autocomplete: 'name', required: 'required', id: 'user_name_signup_modal', class: 'loginForm'
          .kurumi
            = f.label :password, class: 'note' do
              パスワード
              %p.notes ※半角英数字6文字以上
            = f.password_field :password, autocomplete: 'password', required: 'required', minlength: 6, id: 'user_password_signup_modal', class: 'loginForm'
          .kurumi
            = f.label :password_confirmation, class: 'note note--textright' do
              確認
            = f.password_field :password_confirmation, autocomplete: 'password_confirmation', required: 'required', minlength: 6, class: 'loginForm', id: 'user_password_confirmation_signup_modal', onInput: "passValidates(this, 'user_password_signup_modal')"
          .modal03__agreeBase
            %label{for: 'agree_signup_modal', class: 'modal03__agreeBase-label' }
              %input#agree_signup_modal.modal03__checkbox{ autocomplete: 'off', name: 'agreement', required: 'required', type: 'checkbox', value: '' }
              -# 利用規約は現状本物のサイトを開いていますが、余裕があればページ作ってwindow.openのパスを変更してください。
              .agree-check
                .agree-check__link
                  = link_to '利用規約', 'javascript:agreementWindow();'
                  %span に同意する
          .modal03__btn__block
            = f.submit "新規登録", class: 'btnRegit03 btncol_03'
